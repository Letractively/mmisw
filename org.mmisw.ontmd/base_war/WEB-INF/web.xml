			<param-name>ontmd.preview.dir</param-name>
			<param-value>@ontmd.preview.dir@</param-value>
		</init-param>
		
		<init-param>
			<param-name>ontmd.resource.dir</param-name>
			<param-value>@ontmd.resource.dir@</param-value>
		</init-param>
		
		<init-param>
			<param-name>ontmd.resourcetype.class</param-name>
			<param-value>@ontmd.resourcetype.class@</param-value>
		</init-param>
		
		<init-param>
			<param-name>ontmd.authority.class</param-name>
			<param-value>@ontmd.authority.class@</param-value>
		</init-param>

		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ontmdService</servlet-name>
		<url-pattern>/ontmdService</url-pattern>
	</servlet-mapping>

